<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kr.myproject.flowlayout.canclick.ClickFlowLayoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.kr.myproject.flowlayout.canclick.TagFlowLayout
                android:id="@+id/id_flowlayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1"
                android:padding="20dp"/>
            <com.example.kr.myproject.flowlayout.canclick.TagFlowLayout
                android:id="@+id/id_flowlayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1"
                android:padding="20dp"/>
            <com.example.kr.myproject.flowlayout.canclick.TagFlowLayout
                android:id="@+id/id_flowlayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1"
                android:padding="20dp"/>
            <com.example.kr.myproject.flowlayout.canclick.TagFlowLayout
                android:id="@+id/id_flowlayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1"
                android:padding="20dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
