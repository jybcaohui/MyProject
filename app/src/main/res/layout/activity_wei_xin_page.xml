<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ch="http://schemas.android.com/apk/res/com.example.kr.myproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".weixinmainpage.WeiXinPageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/tabbg"
        android:orientation="horizontal" >

        <com.example.kr.myproject.weixinmainpage.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            ch:weiicon="@drawable/ic_menu_start_conversation"
            ch:text="@string/tab_weixin"
            ch:text_size="12sp" />

        <com.example.kr.myproject.weixinmainpage.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            ch:weiicon="@drawable/ic_menu_friendslist"
            ch:text="@string/tab_contact"
            ch:text_size="12sp" />

        <com.example.kr.myproject.weixinmainpage.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            ch:weiicon="@drawable/ic_menu_emoticons"
            ch:text="@string/tab_find"
            ch:text_size="12sp" />

        <com.example.kr.myproject.weixinmainpage.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            ch:weiicon="@drawable/ic_menu_allfriends"
            ch:text="@string/tab_me"
            ch:text_size="12sp" />
    </LinearLayout>

</LinearLayout>