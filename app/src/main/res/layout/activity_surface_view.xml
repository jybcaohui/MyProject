<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kr.myproject.myvideoplayer.SurfaceViewActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp">

        <SurfaceView
            android:id="@+id/sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <RelativeLayout
            android:id="@+id/danmu"
            android:layout_width="fill_parent"
            android:layout_height="450dp"/>
        <ImageView
            android:id="@+id/center_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/play_image"
            android:visibility="gone" />
    </RelativeLayout>

    <!--<SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:background="#000000"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pause_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/pause_image" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:progress="0"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:secondaryProgress="0"
            android:progressDrawable="@drawable/seekbar_define_color_style"
            android:thumb="@drawable/seak_bar_thumb"
            android:thumbOffset="7dp"/>
        <ImageView
            android:id="@+id/fullscreen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_fullscreen" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间显示。。。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停" />

        <Button
            android:id="@+id/btn_replay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重播" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止" />

        <Button
            android:id="@+id/btn_dan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="弹幕" />

    </LinearLayout>

</LinearLayout>
